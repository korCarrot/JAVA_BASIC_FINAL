function fn_validate(){
	
	let name=document.form1.id.value;
	let password=document.form1.password.value;
	console.log(name);
	if(name.length==0 ||  name==='' ||   password.length==0 || password===""){
		alert("아이디, 패스워드는 반드시  둘 다 넣으세요");
	}else{
		
		form1.method="get";
		form1.action="loginResult.jsp";
		form1.submit();
	}
}
</script>

